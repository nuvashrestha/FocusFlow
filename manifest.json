{
    "name": "FocusFlow",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Extension to help you focus using the Pomodoro technique with site blocking features.",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScripts.js"
            ]
        }
    ],
    "action": {
        "default_popup": "index.html",
        "default_title": "FocusFlow",
        "default_icon": "focusflow-logo.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "notifications",
        "alarms",
        "activeTab",
        "scripting",
        "tabs",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "alarm.wav"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}